<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.news.mapper.NewsMapper">

    <resultMap id="BaseResultMap" type="com.news.domain.entity.News">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
            <result property="publishDate" column="publish_date" jdbcType="TIMESTAMP"/>
            <result property="flagDelete" column="flag_delete" jdbcType="CHAR"/>
            <result property="adminId" column="admin_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,content,
        category_id,publish_date,flag_delete,
        admin_id
    </sql>
</mapper>
